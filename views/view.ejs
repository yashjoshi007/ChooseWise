<%- include("partials/header") %>

    <section id="view">
        <div class="container">
          <div class="main-img">
            <img src="/images/<%= img %> " alt="" style="border-radius: 20px;" class="img-responsive d-block w-100">
          </div>
        <!-- toggler start -->
          <section class="toggler">
            <nav class="navbar navbar-expand-sm navbar-light bg-light">
              <a class="navbar-brand">About</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-angle-down arrow" aria-hidden="true"></i>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item active">
                    <a class="nav-link" id="about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="achievements">Achievements</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="faculties">Faculties</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" id="activities">Activities</a>
                  </li>
                 
                </ul>
              </div>
            </nav>
          </section> 
          <!-- toggler end -->
          <!-- about section -->
          <% function numberWithCommas(x) {return x.toString().replace(/\B(?<!\.\d*)(?=(\d{3})+(?!\d))/g, ",");} %> 
          <section class="about section">
            <h3 class="name"><%= school %> </h3>
            <p class="address"><%=city%>, <%=state%></p>
            <p class="about-us"><%= about %> </p>
            <h3>Vacancy</h3>
            <p><%= vacancy %> </p>
            <h3>Fee Structure</h3>
            <p>â‚¹<%= numberWithCommas(parseInt(fee)) %> per annum</p>
            <h3>Contact Us</h3>
            <div class="contact">
              <a href="#"><i class="fas fa-phone"> </i>0194-<%= number %> </a>
              <a href="#"><i class="fas fa-envelope"></i><%= email %> </a>
            </div>
            
          </section>
          <!-- achievements section  -->
          <section class="achievements section">
            <p class="heading">Achievements</p>
            
              <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target="#myCarousel" data-slide-to="1"></li>
                  <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
            
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                  <% achievements.forEach(function (element, index){ %>
                    <div class="item <%= index==0?'active':'' %> ">
                      <img src="/images/<%= element %> " class="d-block " alt="">
                    </div>
                   <% }) %>
                  
                </div>
            
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right"></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>  
          </section>
          <!-- faculties section  -->
          <section class="faculties section">
            <p class="heading">Faculties</p>
         
            <div id="myCarousel1" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <ol class="carousel-indicators">
